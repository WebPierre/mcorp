{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"isolatedModules": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "es2015", "es2016", "es2017"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"typeRoots": ["node_modules/@types", "src/types/libs"],
		"paths": {
			"@Components/*": ["src/components/*"],
			"@Icons/*": ["src/icons/*"],
			"@Samples/*": ["src/samples/*"],
			"@Storybook/*": [".storybook/*"],
			"@Types/*": ["src/types/*"]
		}
	},
	"exclude": [".next", "next.config.js", "node_modules"],
	"include": [".storybook", "next-env.d.ts", "scripts", "src"]
}
